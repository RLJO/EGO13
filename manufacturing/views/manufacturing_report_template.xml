<?xml version="1.0"?>
<odoo>
    <data>

<report
        id="report_manufacturing_details"
        string="manufacturing Report "
        model="manufacturing.report.wizard"
        report_type="qweb-pdf"
        name="manufacturing.print_manufacturing_details_template"
        file="manufacturing.print_manufacturing_details_template"
        menu="False"
    />
        <template id="external_layout_manufacturing">
            <t t-call="manufacturing.external_layout_header_manufacturing"/>
            <t t-raw="0"/>
             <t t-call="manufacturing.external_layout_footer_manufacturing"/>

        </template>

        <template id="external_layout_header_manufacturing">
           <div class="header" style="font-size:14px">
            <div class="row">
                <div class="col-3 mb4">
                    <img t-if="res_company.logo" t-att-src="image_data_uri(res_company.logo)" style="max-height: 45px;" alt="Logo"/>
                </div>
                <div class="col-9 text-right" style="margin-top:22px;" t-field="res_company.report_header" name="moto"/>
            </div>
            <div t-if="res_company.logo or res_company.report_header" class="row zero_min_height">
                <div class="col-12">
                    <div style="border-bottom: 1px solid black;"/>
                </div>
            </div>
            <div class="row">
                <div class="col-6" name="company_address">
                    <div t-field="res_company.partner_id"
                        t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'
                    />
                </div>
            </div>
        </div>


        </template>
         <template id="external_layout_footer_manufacturing">
            <div class="footer" style="font-size:14px">
               <div class="text-center">
                   <hr color="black">

                   </hr>
                <ul class="list-inline">
                    <li t-if="res_company.phone" class="list-inline-item"><i class="fa fa-phone" role="img" aria-label="Phone" title="Phone"/> <span t-field="res_company.phone"/></li>
                    <li t-if="res_company.email" class="list-inline-item"><i class="fa fa-at" role="img" aria-label="Email" title="Email"/> <span t-field="res_company.email"/></li>
                    <li t-if="res_company.website" class="list-inline-item"><i class="fa fa-globe" role="img" aria-label="Website" title="Website"/> <span t-field="res_company.website"/></li>
                    <li t-if="res_company.vat" class="list-inline-item"><i class="fa fa-building-o" role="img" aria-label="Fiscal number"/><t t-esc="res_company.country_id.vat_label or 'Tax ID'"/>: <span t-field="res_company.vat"/></li>
                </ul>
                <div t-field="res_company.report_footer"/>
                <div t-if="report_type == 'pdf'" class="text-muted">
                    Page:
                    <span class="page"/>
                    of
                    <span class="topage"/>
                </div>
            </div>
            </div>
        </template>

        <template id="print_manufacturing_details_template" >
       <t t-call="web.html_container">

           <t t-call="web.basic_layout">
                <t t-call="manufacturing.external_layout_manufacturing">

            <div class="page" >


                <div align="center">
                    <h3 class="text-center"> Manufacturing Total Report </h3>
                    <p>
                        Date from :  <span t-esc="date_from"/>
                        Date To : <span t-esc="date_to"/>
                    </p>
                </div>
                <t t-foreach="docs" t-as="doc">

                    <div class="col-md-6" >
                        <table border="1px" class="table table-condensed table-bordered " style="font-size:11px;" >
                         <thead>
                            <th class="text-center" style="width: 20%;background:#e9ebee;color:#003c79">Manufacturing Order</th>
                              <th class="text-center" style="width: 20%;background:#e9ebee;color:#003c79">Manufacturing Create Date</th>
                            <th class="text-center" style="width: 20%;background:#e9ebee;color:#003c79">Tracking No</th>
                             <th class="text-center" style="width: 25%;background:#e9ebee;color:#003c79">Total Manufacturing Cost</th>
                        </thead>
                                  <tbody>
                                        <td style="padding: 0;" valign="center" align="center"  >
                                    <span t-esc="doc['manufacturing_id']"/>
                                </td>
                                       <td style="padding: 0;" valign="center" align="center"  >
                                     <span t-esc="doc['create_date']"/>

                                </td>

                                <td style="padding: 0;" valign="center" align="center"  >
                                     <span t-esc="doc['track_no']"/>
                                </td>

                                      <td style="padding: 0;" valign="center" align="center"  >
                                     <span t-esc="doc['total_cost']"/>

                                </td>
                    </tbody>
                </table>

                    </div>




                </t>
            </div>
            </t>
            </t>
       </t>

    </template>


    </data>
</odoo>