<?xml version="1.0"?>
<odoo>
    <template id="egy_growers_report_invoice_document_inherit" inherit_id="account.report_invoice_document">
        <xpath expr="//div[1]/h2[1]/span[2]" position="after">
            <span t-if="o.state == 'proforma'">Proforma Invoice</span>
        </xpath>
        <xpath expr="//div[1]/table[1]" position="before">
            <div class="table-responsive col-auto mw-100 mb-2">
                <table class="table table-bordered table-sm" style="font-size:13px;">
                    <thead>
                        <tr>
                            <td class="text-left">Tracking Number</td>
                            <td class="text-left">Shipping Term</td>
                            <td class="text-left">ETD</td>
                            <td class="text-left">ETA</td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="text-left">
                                <p class="m-0" t-field="o.tracking_number"/>
                            </td>
                            <td class="text-left">
                                <p class="m-0" t-field="o.shipping_term"/>
                            </td>
                            <td class="text-left">
                                <p class="m-0" t-field="o.etd"/>
                            </td>
                            <td class="text-left">
                                <p class="m-0" t-field="o.eta"/>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </xpath>
        <xpath expr="//div[1]/table[1]/thead/tr/th[1]" position="before">
            <th class="text-left">
                <span>Product</span>
            </th>
        </xpath>
        <xpath expr="//div[1]/table[1]/tbody/t[2]/tr/t[1]/td[1]" position="before">
            <td>
                <span t-field="line.product_id.name"/>
            </td>
        </xpath>
        <xpath expr="//div[1]/table[1]/tbody/t[2]/tr/t[1]/td[4]" position="replace">
            <td class="text-right">
                <span t-esc="'%.1f'% line.quantity"/>
                <span t-field="line.uom_id" groups="uom.group_uom"/>
            </td>
        </xpath>
        <xpath expr="//div[1]/table[1]/tbody/t[2]/tr/t[1]/td[6]" position="replace">
            <td class="text-right o_price_total">
                <span t-esc="'%.1f'% line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                <span t-esc="'%.1f'% line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
            </td>
        </xpath>
        <xpath expr="//div[1]/table[1]/thead/tr/t[1]" position="replace">
            <t t-set="colspan" t-value="5"/>
        </xpath>
        <xpath expr="//div[1]/table[1]/thead/tr/th[7]" position="replace">
        </xpath>
        <xpath expr="//div[1]/table[1]/tbody/t[2]/tr/t[1]/td[7]" position="replace">
        </xpath>
        <xpath expr="//div[1]/div[3]/div[1]/div[1]/table/t" position="replace">
        </xpath>
        <xpath expr="//div[@name='invoice_date']" position="before">
            <!-- and o.state == 'proforma'-->
            <div class="col-auto mw-100 mb-2" t-if="o.proforma_date" name="proforma_date">
                <strong>Proforma Date:</strong>
                <p class="m-0" t-field="o.proforma_date"/>
            </div>
        </xpath>
    </template>
</odoo>
